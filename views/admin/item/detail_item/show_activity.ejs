<!-- DataTales Example -->

<div class="tab-pane fade" id="show-activity" aria-labelledby="home-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-5">
                    <form action="/admin/item/add/activity" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Name</label>
                            <input type="text" required name="name" class="form-control" id="exampleFormControlInput1" placeholder="name">
                            <label for="exampleFormControlInput2">Type</label>
                            <input type="text" required name="type" class="form-control" id="exampleFormControlInput2" placeholder="enter type">
                            <label for="exampleFormControlInput3">Image</label>
                            <input type="file" required name="image" class="form-control" id="exampleFormControlInput3">
                            <input type="hidden" name="itemId" value="<%- itemId %>">
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
                <div class="col-7">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Image URL</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let i = 0; i < activity.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%= i + 1 %>
                                        </td>
                                        <td>
                                            <%= activity[i].name %>
                                        </td>
                                        <td>
                                            <%= activity[i].type %>
                                        </td>
                                        <td>
                                            <img src="http://localhost:3000/<%= activity[i].imageUrl %>" alt="imageUrl" width="70px" >
                                        </td>
                                        <td>
                                            <form action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE" method="POST">
                                                <a href="javascript:void()" type="button" class="btn btn-warning btn-sm button-update" data-id="<%= activity[i].id %>" data-name="<%= activity[i].name %>" data-type="<%= activity[i].type %>"><i class="fas fa-edit"></i></a>
                                                <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>