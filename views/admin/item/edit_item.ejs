<div class="tab-pane fade show active" id="add-item" role="tabpanel" aria-labelledby="profile-tab">
    <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleFormControlInput1">Title</label>
            <input value="<%= item.title %>" type="text" required name="title" class="form-control" id="exampleFormControlInput1" placeholder="title">
            <label for="exampleFormControlInput2">Price</label>
            <input type="number" value="<%= item.price %>" required name="price" class="form-control" id="exampleFormControlInput2" placeholder="price">
            <label for="exampleFormControlInput3">City</label>
            <input type="text" required name="city" value="<%= item.city %>" class="form-control" id="exampleFormControlInput3">
            <label for="exampleFormControlInput4">Category</label>
            <select class="form-control" name="categoryId" id="exampleFormControlSelect1">
            <option value="<%= item.categoryId._id %>"><%= item.categoryId.name %></option>
            <% for (let i = 0; i < category.length; i++) { %>
                <option value="<%= category[i].id %>" ><%= category[i].name %></option>
            <% } %>
            </select>
            <label for="exampleFormControlInput5">Image</label>
            <input type="file" name="image" class="form-control" id="exampleFormControlInput5" multiple>
            <label for="exampleFormControlInput6">Description</label>
            <textarea type="text" required name="about" class="form-control" id="exampleFormControlInput6" ><%= item.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>